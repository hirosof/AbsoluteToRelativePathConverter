<Window x:Class="AbsoluteToRelativePathConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AbsoluteToRelativePathConverter"
        mc:Ignorable="d"
        Title="AbsoluteToRelativePathConverter (絶対パス→相対パス変換器)" Height="720" Width="1280"
        ThemeMode="Dark" Loaded="Window_Loaded"
        >
    <DockPanel Margin="10px">
        <GroupBox Name="BaseFolderInputGroup" Header="基準フォルダ入力部" DockPanel.Dock="Top">

            <Grid MinHeight="35px">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition  Width="*"/>
                    <ColumnDefinition  Width="100px"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Button Name="BaseFolderReferenceButton" Grid.Column="1" Grid.Row="0" Margin="2px" Content="参照" HorizontalAlignment="Stretch" Click="BaseFolderReferenceButton_Click"/>
                <ComboBox Name="BaseFolderPathComboBox" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Stretch" Margin="2px" IsReadOnly="True" SelectionChanged="BaseFolderPathComboBox_SelectionChanged" />

            </Grid>

        </GroupBox>

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition  Height="1.4*"/>
                <RowDefinition  Height="*"/>
            </Grid.RowDefinitions>

            <GroupBox Name="TargetPathInputGroup" Header="ターゲットパス入力部" Grid.Row="0">

                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition  Height="auto"/>
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="0" Margin="5px" MinHeight="50px">
                        <Button Name="TargetPathInputAdditionalByFiles"  Content="ファイルを追加" Margin="5px" Padding="5px 10px" MinWidth="50px" Click="TargetPathInputAdditionalByFiles_Click"/>
                        <Button Name="TargetPathInputAdditionalByFolders" Content="フォルダを追加" Margin="5px" Padding="5px 10px" MinWidth="50px" Click="TargetPathInputAdditionalByFolders_Click"/>
                        <Button Name="TargetPathInputClear" Content="クリア" Margin="5px" Padding="5px 10px" MinWidth="50px" Click="TargetPathInputClear_Click"/>
                    </StackPanel>

                    <TextBox
                        Name="TargetPathInputTextBox" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                        AcceptsReturn="True" AcceptsTab="True" TextChanged="TargetPathInputTextBox_TextChanged"
                        Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                     />
                    
                </Grid>
            </GroupBox>


            <GroupBox Name="RelativePathOutputGroup" Header="相対パス出力部" Grid.Row="1">
                <TextBox Name="RelativePathOutputTextBox" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                        AcceptsReturn="True" AcceptsTab="True" IsReadOnly="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"

                     />
            </GroupBox>


        </Grid>
        
        

    </DockPanel>
</Window>
